<script>
$(document).ready(function(){
    $('#create-user').click(function(){ window.location.href = '{% url users.views.manage_user %}' });
    $('#show_inactive').click(function(){ window.location.href = '{% url users.views.user_list %}?is_active=1' });
    $('#hide_inactive').click(function(){ window.location.href = '{% url users.views.user_list %}?is_active=0' });
    $('#deactivate').click(function(){
            if(confirm('Are you sure you want to dactivate the user?')){
                document.getElementById('userlist').action = '{% url deactivate-user %}';
            }
            else{
                return false;
            }
        })

    $('#activate').click(function(){
            if((confirm('Are you sure you want to activate the user?'))){
                document.getElementById('userlist').action = '{% url activate-user %}';
            }
            else{
                return false;
            }
        })
    $('table.tablesorter').tablesorter();
});
</script>

